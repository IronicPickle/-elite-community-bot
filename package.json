{
  "name": "elite-community-bot",
  "version": "1.0.0",
  "description": "Elite: Dangerous Squadron Management Bot",
  "main": "./build/app.js",
  "scripts": {
    "clean": "echo Clearing current build... && rm -rf ./build",
    "compile:typescript": "echo Compiling TypeScript... && tsc --build",
    "build": "npm run clean && npm run compile:typescript",
    "prepare": "echo Preparing build... && npm run build",
    "dev": "nodemon",
    "prod": "clear && cross-env NODE_ENV=production node ./build/app.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IronicPickle/elite-community-bot.git"
  },
  "author": "IronicPickle",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/IronicPickle/elite-community-bot/issues"
  },
  "homepage": "https://github.com/IronicPickle/elite-community-bot#readme",
  "dependencies": {
    "@types/ws": "^7.2.5",
    "body-parser": "^1.19.0",
    "config": "^3.3.1",
    "cross-env": "^6.0.3",
    "discord.js": "^12.2.0",
    "discord.js-commando": "git+https://github.com/discordjs/Commando.git",
    "express": "^4.17.1",
    "figlet": "^1.4.0",
    "jsonschema": "^1.2.6",
    "moment": "^2.27.0",
    "mongoose": "^5.9.20",
    "request": "^2.88.0",
    "request-promise": "^4.2.5",
    "require-all": "^3.0.0",
    "typescript": "^3.9.5",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/config": "0.0.36",
    "@types/express": "^4.17.1",
    "@types/figlet": "^1.2.0",
    "@types/jsonschema": "^1.1.1",
    "@types/moment": "^2.13.0",
    "@types/mongoose": "^5.7.28",
    "@types/node": "^12.12.47",
    "@types/request": "^2.48.5",
    "@types/request-promise": "^4.1.45",
    "@types/winston": "^2.4.4",
    "nodemon": "^1.19.4",
    "ts-node": "^8.10.2"
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules"
    ],
    "watch": [
      "src/**/*"
    ],
    "ext": "ts json",
    "exec": "clear && cross-env NODE_ENV=development ts-node -T ./src/app.ts"
  }
}
